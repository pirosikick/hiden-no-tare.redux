{
  "name": "hiden-no-tare.redux",
  "version": "1.0.0",
  "description": "The secret sauce of React & Redux web application, which was made by @pirosikick",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "start": "nodemon src/server/start.js",
    "lint": "eslint src test",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pirosikick/hiden-no-tare.redux.git"
  },
  "author": "Hiroyuki ANAI <pirosikick@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pirosikick/hiden-no-tare.redux/issues"
  },
  "homepage": "https://github.com/pirosikick/hiden-no-tare.redux#readme",
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "body-parser": "^1.15.2",
    "co": "^4.6.0",
    "express": "^4.14.0",
    "express-react-views": "^0.10.2",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-actions": "^0.12.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.16.3",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^7.0.1",
    "lint-staged": "^3.0.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.0",
    "nyc": "^8.3.1",
    "pre-commit": "^1.1.3",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-dev-server": "^1.16.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ]
    }
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.@(js|jsx)": [
      "eslint --fix",
      "git add"
    ]
  }
}
